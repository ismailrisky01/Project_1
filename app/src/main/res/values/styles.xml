<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Headline4.light" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="TextAppearance.MaterialComponents.Headline6.light" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Overline.light" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="TextAppearance.MaterialComponents.Overline.dark" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Subtitle1.light" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="TextAppearance.MaterialComponents.Subtitle1.dark" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="MyCardButton">
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyCardButton.primary">
        <item name="cardBackgroundColor">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="MyCardButton.primaryDark">
        <item name="cardBackgroundColor">@color/colorPrimaryDark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Input" parent="Widget.AppCompat.EditText">
        <item name="android:singleLine">true</item>
    </style>
</resources>